<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_quote_start" />

    <TextView
        android:id="@+id/quote_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp"
        android:text="Quote Goes Here"
        android:textAlignment="gravity"
        android:textColor="@color/grey50"
        android:textSize="30dp"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/quote_text"
        android:layout_alignEnd="@+id/quote_text"
        android:src="@drawable/ic_quote_end" />

    <TextView
        android:id="@+id/author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/quote_text"
        android:layout_below="@+id/quote_text"
        android:layout_margin="8dp"
        android:text="- author"
        android:textColor="@color/app_light_grey"
        android:textSize="18dp" />

</RelativeLayout>